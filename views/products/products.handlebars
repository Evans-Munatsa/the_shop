<h1>Products</h1>
<button class="btn btn-info" type="submit"><a href="/products/add">Add</a></button>
<hr>
<div class="row">
	{{#products}}
	<div class="col-sm-6 col-md-4">
		<div class="thumbnail">
			<h4>{{description}}</h4>
			<div class="caption">
				<button class="btn btn-info btn-sm" type="submit"><a href="/products/edit/{{id}}" >Edit</a></button>
				<button class="btn btn-danger btn-sm" type="submit"><a href="/products/delete/{{id}}">Delete</a></button>
			</div>
		</div>
	</div>
	{{/products}}
</div>



{{#no_products}}
<p>No products available yet. Add some above.</p>
{{/no_products}}
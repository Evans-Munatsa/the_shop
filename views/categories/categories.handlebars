<h1>Categories</h1>
<button class="btn btn-primary" type="submit"><a href="/categories/add">Add</a></button>
<hr>
<div class="panel panel-info">
	<div class="panel-heading">
		<h1 class="panel-title">Categories</h1>
	</div>
	<div class="panel-body">
		<div class="table-responsive panel panel-warning">
			<table class="table table-striped">
				<thead>
					<tr>
						<th>Description</th>
					</tr>
				</thead>
				<tbody>
					<tr>
						{{#categories}}
						<tr>
							<td>
								<p>{{description}}</p>
								<button class="btn btn-primary btn-sm" type="submit"><a href="/categories/edit/{{id}}" >Edit</a></button>
		  <button class="btn btn-danger btn-sm" type="submit"><a href="/categories/delete/{{id}}">Delete</a></button>
							</td>
						</tr>
						{{/categories}}
						
					</tbody>
				</table>
			</div>
		</div>
		{{#no_products}}
		<p>No products available yet. Add some above.</p>
		{{/no_products}}
	</div>